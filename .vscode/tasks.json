{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with MSVC (Debug)",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe${workspaceFolder}\\bin\\debug-windows\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${workspaceFolder}\\bin\\debug-windows"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "User defined C/C++: cl.exe build active file (Debug)",
			"dependsOrder": "sequence",
			"dependsOn": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}