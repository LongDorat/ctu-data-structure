{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with MSVC (Debug)",
			"command": "cl.exe",
			"args": [
				"/nologo",
				"/Zi",
				"/W3",
				"/WX",
				"/D",
				"_DEBUG",
				"/D",
				"UNICODE",
				"/D",
				"_UNICODE",
				"/EHsc",
				"/Fe:",
				"${workspaceFolder}\\bin\\debug-windows\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${workspaceFolder}\\bin\\debug-windows"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "Shell: cl.exe build active file (Debug)",
		},
		{
			"type": "shell",
			"label": "Build with GCC (Debug)",
			"command": "gcc -fdiagnostics-color=always -g -Wall -Wextra -std=c99 \"${file}\" -o \"${workspaceFolder}/bin/debug-linux/${fileBasenameNoExtension}\"",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Shell: gcc build active file (Debug) - for devcontainer",
			"problemMatcher": ["$gcc"]
		}
	]
}