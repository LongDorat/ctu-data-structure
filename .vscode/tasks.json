{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with MSVC (Debug)",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe${workspaceFolder}\\bin\\debug-windows\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${workspaceFolder}\\bin\\debug-windows"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "User defined C/C++: cl.exe build active file (Debug)",
			"dependsOrder": "sequence",
			"dependsOn": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "cppbuild",
			"label": "Build with GCC (Debug)",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-Wextra",
				"-std=c99",
				"${file}",
				"-o",
				"${workspaceFolder}/bin/debug-linux/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "C/C++: gcc build active file (Debug) - for devcontainer",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$gcc"]
		},
		{
			"type": "shell",
			"label": "Run Program (Linux)",
			"command": "${workspaceFolder}/bin/debug-linux/${fileBasenameNoExtension}",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"dependsOn": "Build with GCC (Debug)"
		}
	]
}