{
    "name": "CTU Data Structure",
    "image": "mcr.microsoft.com/devcontainers/cpp:1-ubuntu-22.04",
    "runArgs": ["--name", "${localWorkspaceFolderBasename}-devcontainer"],
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "aaron-bond.better-comments",
                "streetsidesoftware.code-spell-checker",
                "adpyke.codesnap",
                "usernamehw.errorlens",
                "jmkrivocapich.drawfolderstructure",
                "EditorConfig.EditorConfig",
                "github.vscode-github-actions",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "eamodio.gitlens",
                "christian-kohler.path-intellisense",
                "esbenp.prettier-vscode",
                "jeff-hykin.better-cpp-syntax",
                "miguelsolorio.fluent-icons",
                "yzhang.markdown-all-in-one",
                "PKief.material-icon-theme",
                "eserozvataf.one-dark-pro-monokai-darker",
                "ms-vscode.powershell"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 1000,
                "workbench.iconTheme": "material-icon-theme",
                "workbench.colorTheme": "One Dark Pro Monokai Darker"
            }
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential gdb valgrind && mkdir -p /workspaces/ctu-data-structure/bin/debug-linux && mkdir -p /workspaces/ctu-data-structure/bin/release-linux",
    "remoteUser": "vscode",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces,type=bind,consistency=cached"
    ]
}