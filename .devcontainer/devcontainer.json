{
    "name": "CTU Data Structure",
    "image": "mcr.microsoft.com/devcontainers/cpp:1-ubuntu-22.04",
    "runArgs": ["--name", "${localWorkspaceFolderBasename}-devcontainer"],
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "aaron-bond.better-comments",
                "streetsidesoftware.code-spell-checker",
                "adpyke.codesnap",
                "usernamehw.errorlens",
                "ms-azuretools.vscode-docker",
                "docker.docker",
                "jmkrivocapich.drawfolderstructure",
                "EditorConfig.EditorConfig",
                "github.vscode-github-actions",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "eamodio.gitlens",
                "christian-kohler.path-intellisense",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential gdb valgrind && mkdir -p /workspaces/ctu-data-structure/bin/debug-linux && mkdir -p /workspaces/ctu-data-structure/bin/release-linux",
    "remoteUser": "vscode",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces,type=bind,consistency=cached"
    ]
}